<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.movies.NowPlayingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--movie 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <!-- Image -->
                <ImageView
                    android:id="@+id/imageViewMovie1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/creator"/>

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Movie Title -->
                    <TextView
                        android:id="@+id/textViewTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Creater"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <!-- Movie Genre -->
                    <TextView
                        android:id="@+id/textViewGenre1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Action, Adventure"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>

                <!-- View Ticket Button -->
                <Button
                    android:id="@+id/buttonBuyTicket01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#2a3757"
                    android:text="Buy Ticket" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--movie 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <!-- Image -->
                <ImageView
                    android:id="@+id/imageViewMovie2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jawan" />

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Movie Title -->
                    <TextView
                        android:id="@+id/textViewTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jawan"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Movie Genre -->
                    <TextView
                        android:id="@+id/textViewGenre2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thriller, Action"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- View Ticket Button -->
                <Button
                    android:id="@+id/buttonBuyTicket02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#2a3757"
                    android:text="Buy Ticket" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--movie 3-->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <!-- Image -->
                <ImageView
                    android:id="@+id/imageViewMovie3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paw"/>

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Movie Title -->
                    <TextView
                        android:id="@+id/textViewTitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paw Patrol"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <!-- Movie Genre -->
                    <TextView
                        android:id="@+id/textViewGenre3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Animation, Comedy"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>

                <!-- View Ticket Button -->
                <Button
                    android:id="@+id/buttonBuyTicket03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#2a3757"
                    android:text="Buy Ticket" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--movie 4-->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <!-- Image -->
                <ImageView
                    android:id="@+id/imageViewMovie4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/saw" />

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Movie Title -->
                    <TextView
                        android:id="@+id/textViewTitle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saw X"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Movie Genre -->
                    <TextView
                        android:id="@+id/textViewGenre4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horror, Thriller"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- View Ticket Button -->
                <Button
                    android:id="@+id/buttonBuyTicket04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#2a3757"
                    android:text="Buy Ticket" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
