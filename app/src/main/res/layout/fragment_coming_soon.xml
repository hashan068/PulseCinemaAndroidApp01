<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.movies.NowPlayingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--movie 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <!-- Image -->

                <!-- Movie Details -->

                <ImageView
                    android:id="@+id/imageViewMovie1"
                    android:layout_width="184dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wonka" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Movie Title -->
                    <TextView
                        android:id="@+id/textViewTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wonka"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <!-- Movie Genre -->
                    <TextView
                        android:id="@+id/textViewGenre1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Family, Comedy"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>

                <!-- View Ticket Button -->
                <Button
                    android:id="@+id/comingview01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#2a3757"
                    android:text="View" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--movie 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <!-- Image -->
                <ImageView
                    android:id="@+id/imageViewMovie2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aqua" />

                <!-- Movie Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Movie Title -->
                    <TextView
                        android:id="@+id/textViewTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aquaman 2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Movie Genre -->
                    <TextView
                        android:id="@+id/textViewGenre2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fantasy, Action"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- View Ticket Button -->
                <Button
                    android:id="@+id/comingview02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#2a3757"
                    android:text="View" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>